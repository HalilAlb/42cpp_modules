NAME    := 
CXX     := c++
CXXFLAGS:= -Wall -Wextra -Werror -std=c++98 -MMD

SRC     := 
OBJDIR  := objs
OBJ     := $(OBJDIR)/.o
DEPS    := $(OBJ:.o=.d)

all: $(NAME)

$(NAME): $(OBJ)
	$(CXX) $(OBJ) -o $@

$(OBJDIR)/%.o: %.cpp
	mkdir -p $(OBJDIR)
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -rf $(OBJDIR)

fclean: clean
	rm -f $(NAME)

re: fclean all

-include $(DEPS)

.PHONY: all clean fclean re
